<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"

    tools:context="com.example.student.kolokwiumpum2.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Witaj w restauracji XYZ"
        android:layout_gravity="center"
        android:textSize="20dp"

        android:textColor="@android:color/white"
        android:background="#4c8c4a"
        android:paddingTop="8dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Wpisz pesel pacjenta dla którego chcesz umówić wizytę"
        android:textColor="@android:color/holo_green_dark"
        android:paddingTop="10dp"
        android:textSize="10dp"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"/>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Podaj numer pesel"
        android:gravity="center"
        android:paddingTop="20dp"
        android:id="@+id/edit_pesel"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"/>

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:gravity="center"
        android:src="@drawable/healing"


        />
    <Button
        android:layout_width="240dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:text="WYBIERZ LEKARZA"
        android:textColor="@android:color/white"
        android:background="#4c8c4a"
        android:layout_marginTop="50dp"

        android:id="@+id/wybierz_lekarza"/>

</LinearLayout>
